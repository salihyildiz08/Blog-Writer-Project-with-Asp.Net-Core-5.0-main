@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Category List</h1>
<br />
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Category Name</th>
    <th>Make Active</th>
    <th>Make Passive</th>
    <th>Edit</th>
</tr>
@foreach(var item in Model)
{
    <tr>
        <td>@item.CategoryID</td> 
        <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn" onclick="return confirm('Are you sure you want to delete ?');" class="btn btn-danger">Make Passive</a></td>
        <td><a href="#" class="btn btn-warning">Make Active</a></td>
        <td><a href="#" class="btn btn-success">Edit</a></td>
    </tr>
}
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">New Category</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
