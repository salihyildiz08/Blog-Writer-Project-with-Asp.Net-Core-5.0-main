@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
    
  
           <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    @foreach(var item in Model)
                    {
                    <div class="col-md-3">
                        <div class="ibox">
                            <div class="ibox-content product-box">

                                <div class="product-imitation">
                                   <img src="@item.BlogImage" height="225" width="240"/>
                                </div>
                                <div class="product-desc">
                                    <span class="product-price">
                                    @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyy"))
                                    </span>
                                    <small class="text-muted">@item.Category.CategoryName</small>
                                    <a href="#" class="product-name">@item.BlogTitle</a>



                                    <div class="small m-t-xs">
                                    <p class="card-text mb-3">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,30).LastIndexOf(" "))....</p>
                                    </div>
                                    <div class="m-t text-righ">

                                        <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-xs btn-outline btn-primary">Details <i class="fa fa-long-arrow-right"></i> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
            
</body>

</html>


