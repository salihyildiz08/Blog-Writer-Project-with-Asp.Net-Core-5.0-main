@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WrriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<form class="form-group" method="post" enctype="multipart/form-data">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Writer Profile Update</h4>
            <p class="card-description"> Basic form elements </p>
            <br />
            @Html.HiddenFor(x=>x.WriterID,new {@class="form-control"})

            <div class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Writer Name</label>
                    @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    @Html.PasswordFor(x=>x.WiretPassword,new {@class="form-control"})

                </div>
                <div class="form-group">
                    <label>Writer Image</label>
                        <input type="file" name="WiretImage" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Writer About</label>
                    @Html.TextAreaFor(x=>x.WriterAbout,10,3,new {@class="form-control"})

                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Update</button>
                <button class="btn btn-light">Cancel</button>
            </div>
        </div>
    </div>
</div>

</form>