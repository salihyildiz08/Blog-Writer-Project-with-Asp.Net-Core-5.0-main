@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1>New Message Entry</h1>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("reciver")
    @*@Html.TextBoxFor(x=>x.Subject,new {@class="form-control"})*@
    <input type="text" class="form-control" />
    <br />
    @Html.Label("Subject")
    @Html.TextBoxFor(x=>x.Subject,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Subject)
    <br />
    @Html.Label("Message Detail")
    @Html.TextAreaFor(x=>x.MessageDetails,15,3,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.MessageDetails)
    <br />
    <button class="btn btn-info"> Message send </button>
    <br />
}

